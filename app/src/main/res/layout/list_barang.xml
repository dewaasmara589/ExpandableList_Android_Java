<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/keteranganBarang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        android:textColor="@color/black"
        android:paddingVertical="7dp"
        android:layout_marginVertical="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="1dp"
        android:background="#45CACACA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/planogramBarang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.37"
        android:textColor="@color/black"
        android:paddingVertical="7dp"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="1dp"
        android:background="#45CACACA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/keteranganBarang"/>

    <TextView
        android:id="@+id/tglBarang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.2"
        android:textColor="@color/black"
        android:paddingVertical="7dp"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="1dp"
        android:background="#45CACACA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/planogramBarang"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:text="ADD"
        android:textColor="@color/black"
        android:padding="0dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tglBarang"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>